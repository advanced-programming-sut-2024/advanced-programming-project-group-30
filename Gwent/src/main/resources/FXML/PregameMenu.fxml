                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                    </GridPane>
                </content>
            </ScrollPane>
        </HBox>
    </center>
    <stylesheets>
        <URL value="@../CSS/Backgrounds.css"/>
        <URL value="@../CSS/GameNodesStyle.css"/>
    </stylesheets>
</BorderPane>
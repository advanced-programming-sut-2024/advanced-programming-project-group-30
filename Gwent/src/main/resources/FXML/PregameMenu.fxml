              style="-fx-spacing: 35;" BorderPane.alignment="CENTER">
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxHeight="460.0" maxWidth="382.0" minWidth="300.0"
                        prefHeight="460.0" prefWidth="380.0" style="-fx-background-color: rgba(0,0,0,0.5);" vbarPolicy="ALWAYS">
                <GridPane prefHeight="662.0" prefWidth="368.0" style="-fx-background-color: rgba(0,0,0,0.5);">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                </GridPane>
            </ScrollPane>


            <Pane maxHeight="460.0" maxWidth="230.0" minWidth="230.0" prefHeight="460.0" styleClass="blackPane">
                <Label layoutX="100.0" layoutY="20.0" styleClass="leaderTitle" text="Leader"/>
                <Rectangle arcHeight="20" arcWidth="20" fill="#725a3e" height="150" layoutX="72" layoutY="47" stroke="BLACK" width="96"/>
                <VBox alignment="CENTER" layoutX="57.0" layoutY="210.0" prefHeight="179.0" prefWidth="126.0" style="-fx-spacing: 4;">
                    <Label text="Total cards in deck" styleClass="topicLabel"/>
                    <HBox styleClass="numberHBox" alignment="BOTTOM_CENTER">
                        <ImageView fitHeight="17.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../Images/Game/PregameIcons/deck_stats_count.png"/>
                        </ImageView>
                        <Label alignment="BOTTOM_LEFT" contentDisplay="BOTTOM" prefHeight="12.0" text="×20" styleClass="numberLabel"/>
                    </HBox>
                    <Label text="Number of Unit Cards" styleClass="topicLabel"/>
                    <HBox styleClass="numberHBox" alignment="BOTTOM_CENTER">
                        <ImageView fitHeight="15.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../Images/Game/PregameIcons/deck_stats_unit.png"/>
                        </ImageView>
                        <Label alignment="BOTTOM_LEFT" contentDisplay="BOTTOM" prefHeight="12.0" text="×20" styleClass="numberLabel"/>
                    </HBox>
                    <Label text="Special Cards" styleClass="topicLabel"/>
                    <HBox styleClass="numberHBox" alignment="BOTTOM_CENTER">
                        <ImageView fitHeight="18.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../Images/Game/PregameIcons/deck_stats_special.png"/>
                        </ImageView>
                        <Label alignment="BOTTOM_LEFT" contentDisplay="BOTTOM" prefHeight="12.0" text="5/10" styleClass="numberLabel"/>
                    </HBox>
                    <Label text="Total Unit Card Strength" styleClass="topicLabel"/>
                    <HBox styleClass="numberHBox" alignment="BOTTOM_CENTER">
                        <ImageView fitHeight="18.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../Images/Game/PregameIcons/deck_stats_strength.png"/>
                        </ImageView>
                        <Label alignment="BOTTOM_LEFT" contentDisplay="BOTTOM" prefHeight="12.0" text="139" styleClass="numberLabel"/>
                    </HBox>
                    <Label text="Hero Cards" styleClass="topicLabel"/>
                    <HBox styleClass="numberHBox" alignment="BOTTOM_CENTER">
                        <ImageView fitHeight="17.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../Images/Game/PregameIcons/deck_stats_hero.png"/>
                        </ImageView>
                        <Label alignment="BOTTOM_LEFT" contentDisplay="BOTTOM" prefHeight="12.0" text="×9" styleClass="numberLabel"/>
                    </HBox>
                </VBox>
                <Button layoutX="82.0" layoutY="415.0" minHeight="23.0" mouseTransparent="true" prefHeight="13.0" prefWidth="77.0"
                        text="Start game" styleClass="yellowButton"/>
                <Rectangle arcHeight="5.0" arcWidth="5.0" disable="true" fill="#1f93ff00" height="23.0" layoutX="82.0" layoutY="415.0"
                           stroke="#36230790" strokeType="INSIDE" width="76.0"/>
            </Pane>
            <ScrollPane hbarPolicy="NEVER" maxHeight="460.0" maxWidth="527.0" minWidth="300.0" prefHeight="460.0" prefWidth="380.0"

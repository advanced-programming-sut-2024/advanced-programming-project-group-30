                <content>
                    <GridPane prefHeight="662.0" prefWidth="363.0" style="-fx-background-color: rgba(0,0,0,0.5);">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>

                <Label layoutX="211.0" layoutY="38.0" styleClass="factionName" text="Faction Name"/>
                <ImageView fitHeight="40.0" layoutX="153.0" layoutY="38.0" preserveRatio="true">
                    <Image url="@../Images/Game/FactionsIcons/Nilfgaard.png"/>
                </ImageView>
                <ImageView fitHeight="40.0" layoutX="417.0" layoutY="38.0" preserveRatio="true">
                    <Image url="@../Images/Game/FactionsIcons/Nilfgaard.png"/>
                </ImageView>
                <Label layoutX="127.0" layoutY="87.0" styleClass="descriptions"
                       text="Descriptions about the ability of the Faction are written here"/>
                <Button layoutX="226" layoutY="111" prefHeight="30" prefWidth="138" styleClass="buttonWithoutBack" text="Change Faction"/>
                <Button layoutX="358" layoutY="111" prefHeight="30" prefWidth="140" styleClass="buttonWithoutBack" text="Download Deck"/>
                <Button layoutX="107" layoutY="111" prefHeight="30" prefWidth="118" styleClass="buttonWithoutBack" text="Upload Deck"/>
            </Pane>
        </VBox>

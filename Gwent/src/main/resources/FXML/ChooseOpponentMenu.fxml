    <Pane maxWidth="492.0" minWidth="100.0" prefHeight="305.0" prefWidth="536.0" style="-fx-scale-x: 1.15; -fx-scale-y: 1.15;" styleClass="blackPaneForChooseOpponent">
        <Button layoutX="18.0" layoutY="18.0" minHeight="20.0" mnemonicParsing="false" onMouseClicked="#backToMainMenu" prefHeight="20.0" prefWidth="20.0" styleClass="backIcon" />
        <Label layoutX="70.0" layoutY="41.0" style="-fx-font-size: 26;" styleClass="bigTitle" text="You can play with your friend" />

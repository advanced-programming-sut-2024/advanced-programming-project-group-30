<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="MenusBackground" stylesheets="@../CSS/Backgrounds.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ForgetPasswordMenu">
    <center>
        <Pane maxHeight="600.0" maxWidth="600.0" minHeight="600.0" minWidth="600.0" stylesheets="@../CSS/NodeStyle.css">
            <Pane fx:id="firstPage" layoutX="76.0" layoutY="132.0" maxHeight="556.0" maxWidth="449.0" minHeight="325.0" minWidth="400.0"
                  prefHeight="336.0" prefWidth="449.0" styleClass="brownBox">
                <Label layoutX="108.0" layoutY="36.0" prefHeight="50.0" prefWidth="236.0" styleClass="beigeTitle" text="Forget Password"/>
                <Label layoutX="149.0" layoutY="96.0" prefHeight="27.0" prefWidth="151.0" styleClass="gabriolaText"
                       text="enter your username"/>
                <TextField fx:id="username" layoutX="81.0" layoutY="130.0" maxHeight="50.0" minHeight="50.0" prefHeight="50.0"
                           prefWidth="283.0" promptText="username" style="-fx-alignment: CENTER; -fx-font-size: 26;"
                           styleClass="blackBgField"/>
                <Button layoutX="61.0" layoutY="212.0" onAction="#continueForgetPassword" prefHeight="40.0" prefWidth="325.0"
                        styleClass="buttonWithBeigeBg" text="Continue"/>
                <Label fx:id="continueError" alignment="CENTER" layoutX="67.0" layoutY="187.0" prefHeight="17.0" prefWidth="317.0"
                       style="-fx-text-fill: red;" styleClass="errorMessage"/>
                <Button layoutX="129.0" layoutY="269.0" mnemonicParsing="false" onAction="#goToLoginMenu" prefHeight="36.0"
                        prefWidth="186.0" styleClass="boldButtonWithoutBg" text="back to login"/>
                <effect>
                    <Blend mode="COLOR_BURN" opacity="0.2"/>
                </effect>
            </Pane>

            <Pane fx:id="secondPage" disable="true" layoutX="76.0" layoutY="81.0" maxHeight="438.0" maxWidth="450.0" minHeight="422.0"
                  minWidth="400.0" prefHeight="422.0" prefWidth="450.0" styleClass="brownBox" visible="false">
                <Label layoutX="107.0" layoutY="38.0" prefHeight="50.0" prefWidth="236.0" styleClass="beigeTitle" text="Forget Password"/>
                <Button layoutX="25.0" layoutY="23.0" maxHeight="20.0" minHeight="20.0" mnemonicParsing="false" onAction="#backToFirstPage"
                        prefWidth="20.0" styleClass="backIcon"/>
                <Label alignment="CENTER" layoutX="95.0" layoutY="104.0" prefHeight="28.0" prefWidth="259.0" styleClass="gabriolaText"
                       text="choose your security question"/>
                <ChoiceBox fx:id="questions" layoutX="75.0" layoutY="147.0" prefHeight="38.0" prefWidth="300.0"
                           styleClass="blackBgChooseBox" value="choose a question"/>
                <TextField fx:id="answer" alignment="CENTER" layoutX="75.0" layoutY="211.0" prefHeight="35.0" prefWidth="300.0"
                           promptText="Answer" styleClass="blackBgField"/>
                <Button layoutX="62.0" layoutY="293.0" onAction="#getPassword" prefHeight="40.0" prefWidth="325.0"
                        styleClass="buttonWithBeigeBg" text="Get Password"/>
                <Label fx:id="getPasswordError" alignment="CENTER" layoutX="67.0" layoutY="265.0" prefHeight="17.0" prefWidth="317.0"
                       style="-fx-text-fill: red;" styleClass="errorMessage"/>
                <Button layoutX="131.0" layoutY="350.0" mnemonicParsing="false" onAction="#goToLoginMenu" prefHeight="36.0"
                        prefWidth="186.0" styleClass="boldButtonWithoutBg" text="back to login"/>
                <effect>
                    <Blend mode="COLOR_BURN" opacity="0.2"/>
                </effect>
            </Pane>

            <Pane fx:id="showPasswordPane" disable="true" layoutX="76.0" layoutY="165.0" maxHeight="438.0" maxWidth="450.0"
                  minHeight="243.0" minWidth="400.0" prefHeight="269.0" prefWidth="450.0" styleClass="brownBox" visible="false">
                <Label layoutX="89.0" layoutY="40.0" prefHeight="50.0" prefWidth="274.0" style="-fx-font-style: none;"
                       styleClass="beigeTitle" text="Your Password is:"/>
                <TextField fx:id="password" alignment="CENTER" editable="false" focusTraversable="false" layoutX="93.0" layoutY="98.0"
                           prefHeight="52.0" prefWidth="265.0" promptText="password" style="-fx-font-size: 25;" styleClass="simpleText"/>
                <Button layoutX="126.0" layoutY="175.0" onAction="#goToLoginMenu" prefHeight="40.0" prefWidth="201.0"
                        styleClass="buttonWithBeigeBg" text="back to login menu"/>
                <effect>
                    <Blend mode="COLOR_BURN" opacity="0.2"/>
                </effect>
            </Pane>
        </Pane>
    </center>
</BorderPane>